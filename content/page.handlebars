<body>
<nav class="ui secondary pointing stackable menu">
	{{#each leftMenu}}
		<a class="item {{concat this.class conj=" "}}" href="{{@key}}">{{this.name}}</a>
	{{/each}}
	<div class="right menu">
		{{#each rightMenu}}
			<a class="item {{concat this.class conj=" "}}" href="{{@key}}">{{this.name}}</a>
		{{/each}}
	</div>
</nav>
<div class="ui main text container segment raised">
	{{#if content}}
		{{{content}}}
	{{/if}}
</div>
